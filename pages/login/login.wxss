.avatar image{
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  margin: 100rpx 275rpx 50rpx 275rpx;
}
.name{
  width: 100%;
  text-align: center
}
.footer{
  position: fixed;
  bottom: 0;
  text-align: center;
  width: 100%
}
.content{
  display: flex;
  flex-wrap: wrap;
  margin: 100rpx 20rpx 0 20rpx ;
  justify-content: space-between
}
.title{
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #AE0000;
}
.content-item{
  width: 230rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #AE0000;
  box-sizing: border-box;
  margin-top: 30rpx
}
.alert{
  width:240rpx;
  height:130rpx;
  line-height: 130rpx;
  margin:80rpx 35%;
  border-radius:20rpx;
  background-color: rgb(114,113,113);
  color:rgb(255,255,255);
  font-size: 36rpx;
  text-align: center;
  position: absolute;
  z-index: 100;
  opacity: 0.85;
}